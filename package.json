{
  "name": "dropdown-js",
  "version": "0.0.1-alpha8",
  "description": "This is a simple pure javascript dropdown/context menu with no dependencies.",
  "main": "dist/dropdown.js",
  "scripts": {
    "build": "babel src/dropdown.js --out-file dist/dropdown.js --source-maps inline --plugins transform-es2015-modules-umd --presets latest",
    "build:min": "babel src/dropdown.js --out-file dist/dropdown.min.js --plugins transform-es2015-modules-umd --presets=latest,babili",
    "build:watch": "npm run build -- --watch",
    "build:doc": "jsdoc src/dropdown.js --pedantic --readme ./README.md --destination ./doc/",
    "build:css": "lessc src/dropdown.less dist/dropdown.css",
    "build:css:min": "lessc src/dropdown.less dist/dropdown.min.css --clean-css=\"--s1 --advanced --compatibility=ie9\"",
    "build:lint": "eslint src/dropdown.js",
    "build:all": "npm-run-all --parallel build build:min build:lint build:doc build:css build:css:min",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "context",
    "dropdown",
    "menu"
  ],
  "author": "Andreas Hjortland <dropdown-js(at)hjortland.org>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-plugin-transform-es2015-modules-umd": "^6.22.0",
    "babel-preset-babili": "0.0.10",
    "babel-preset-latest": "^6.22.0",
    "jsdoc": "^3.4.3",
    "less": "^2.7.2",
    "less-plugin-clean-css": "^1.5.1",
    "npm-run-all": "^4.0.1"
  }
}
